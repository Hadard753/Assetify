@model UserIndex

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-12 page-title">
        <h1>Admin Dashboard</h1>
    </div>
</div>
<div class="row">
    <div class="col-12 page-sub-title">
        <h4>Manage Users</h4>
    </div>
</div>


<form asp-controller="Users" asp-action="IndexSearch">
    <div class="row">
        <div class="col-sm-12 col-md-auto">
            <div class="form-group">
                <label class="control-label">Email</label>
                <input name="Email" class="form-control" value="@Model.userSearch.Email" />
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-12 col-md-auto">
            <div class="form-group">
                <label class="control-label">First name</label>
                <input name="FirstName" class="form-control" value="@Model.userSearch.FirstName" />
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-12 col-md-auto">
            <div class="form-group">
                <label class="control-label">Last name</label>
                <input name="LastName" class="form-control" value="@Model.userSearch.LastName" />
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-2 col-md-1 my-auto manage-user-btn">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
        <div class="col-sm-2 col-md-1 my-auto manage-user-btn">
            <a asp-action="Create">
                <input type="button" value="Create" class="btn btn-success" />
            </a>
        </div>
    </div>
</form>

<div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.users.First().Email)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.users.First().FirstName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.users.First().LastName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.users.First().Phone)
                </th>
                <th scope="col">
                    # Favs
                </th>
                <th scope="col">
                    # Publishments
                </th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.users)
            {
                <tr>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumOfFavorites)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumOfPublish)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.UserID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.UserID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.UserID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>