@model UserIndex

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<form asp-controller="Users" asp-action="IndexSearch">
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input name="Email" class="form-control" value="@Model.userSearch.Email" />
                    <span class="text-danger"></span>
                </div>
            </div>

            <div class="col-sm">
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>


    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.users.First().Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.users.First().Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.users.First().FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.users.First().LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.users.First().Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.users.First().IsVerified)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.users.First().LastSeenFavorite)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.users.First().LastSeenMessages)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.users)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsVerified)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastSeenFavorite)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastSeenMessages)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.UserID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.UserID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.UserID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
