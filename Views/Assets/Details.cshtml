@model Assetify.Models.Asset

@{
    ViewData["Title"] = "Details";
    string imgSrcUrl = "";
    int imgCounter = 0;
    User owner = null;
}
<!--for google maps-->
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAwNtnyyfWcM_TyD7m6WImqsL2Uae-x_5M&callback=initMap&libraries=&v=weekly"
        defer></script>

<h1>Details</h1>

<div id="assetdetailscard">
    <div class="card">
        <div class="row">
            <div class="col-md-7 px-3">
                <div class="card-block px-6">
                    <h4 class="card-title">@Model.Description </h4>
                    <h5 class="card-text">
                        @Model.Address.Street, @Model.Address.City
                        <span class="float-right font-weight-light">@Convert.ToDecimal(Model.Price).ToString("#,##0")  <img src="~/assets/shekel.png" width="15px" height="15px" /></span>
                    </h5>
                    <p>
                        Paragraph with descriptive details about the asset......! :D
                    </p>
                    <br />
                    <div class="col-12">
                        <div id="map" style="width:50%; height: 200px"></div>
                    </div>
                    <br />
                    @foreach (var user in Model.Users)
                    {
                        @if (user.Action.ToString() == "PUBLISH")
                            owner = user.User;
                    }
                    @if (owner != null)
                    {
                        <p>Contact: @owner.FirstName @owner.LastName</p>
                        <p>Phone Number: @owner.Phone</p>
                    }
                </div>
            </div>
            @if (Model.Images.Count > 0)
            {
                AssetImage[] imagesArr = Model.Images.ToArray();
                if (Model.Images.Count > 1) // if larger than 1 display carousel
                {
                    <!-- Carousel start -->
                    <div class="col-md-5">
                        <div id="CarouselTest" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                @for (int i = 0; i < imagesArr.Length; i++)
                                {
                                    if (i == 0)
                                    {
                                        <li data-target="#CarouselTest" data-slide-to="@i" class="active"></li>
                                    }
                                    else
                                    {
                                        <li data-target="#CarouselTest" data-slide-to="@i"></li>
                                    }
                                }
                            </ol>
                            <div class="carousel-inner">
                                @for (int i = 0; i < imagesArr.Length; i++)
                                {
                                    if (i == 0)
                                    {
                                        <div class="carousel-item active">
                                            <img class="d-block" src="@imagesArr[i].Path" alt="Image not found">
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="carousel-item">
                                            <img class="d-block" src="@imagesArr[i].Path" alt="Image not found">
                                        </div>
                                    }
                                }
                                <a class="carousel-control-prev" href="#CarouselTest" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#CarouselTest" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                        <div id="assetinfo">
                            <div class="row no-gutters">
                                <div class="col-4 d-flex justify-content-center">
                                    <div class="img-container card card-block">
                                        <img src="~/assets/floors2.png" width="18px" height="18px" title="Number of floors" />  @Model.Floor Floors
                                    </div>
                                </div>
                                <div class="col-4 d-flex justify-content-center">
                                    <div class="img-container card card-block">
                                        <img src="~/assets/rooms2.png" width="18px" height="18px" title="Number of rooms" />  @Model.Rooms Rooms
                                    </div>
                                </div>
                                <div class="col-4 d-flex justify-content-center">
                                    <div class="img-container card card-block">
                                        <img src="~/assets/size2.png" width="18px" height="18px" title="Square Meters" />  @Model.Size Square Meters
                                    </div>
                                </div>
                                <div class="col-4 d-flex justify-content-center">
                                    <div class="img-container card card-block">
                                        <img src="~/assets/garden.png" width="18px" height="18px" title="Has Garden" />  @(Model.GardenSize == 0 ? "No" : "Yes") Garden
                                    </div>
                                </div>
                                <div class="col-4 d-flex justify-content-center">
                                    <div class="img-container card card-block">
                                        <img src="~/assets/ac.png" width="18px" height="18px" title="Has A/C" />  @(Model.IsAircondition == true ? "Yes" : "No") A/C
                                    </div>
                                </div>
                                <div class="col-4 d-flex justify-content-center">
                                    <div class="img-container card card-block">
                                        <img src="~/assets/elevator.svg" width="18px" height="18px" title="Has Elevator" />  @(Model.IsElevator == true ? "Yes" : "No") Elevator
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }
                else // display 1 image only
                {
                    <div class="col-md-5">
                        <div id="CarouselTest" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#CarouselTest" data-slide-to="0" class="active"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block" src="@imagesArr.First().Path" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <!-- End of carousel -->
            }
        </div>
    </div>
</div>
<!-- End of card -->

<div id="maincontent">
    <hr />
        <div id="articlescontent">
            <h4>News featuring @Model.Address.City</h4>
            @{int counter = 0;}
            <div class="row">
                @foreach (var article in ViewBag.articleCity)
                {
                    @if (counter == 3)
                        break;

                    <div class="col-md-4">
                        <div class="card" style="height: 35rem;">
                            <img class="card-img-top" src=@article.image_url alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@article.title</h5>
                                <p class="card-text">@article.description</p>
                                <a href="@article.url" target="_blank">full article</a>
                            </div>
                        </div>
                    </div>
                    counter++;
                }
            </div>
            <a asp-action="cityArticals" asp-route-cityName="@Model.Address.City">For more articles</a>


    <input id="lat" hidden value="@Model.Address.Latitude" />
    <input id="lon" hidden value="@Model.Address.Longitude" />

</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.AssetID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

