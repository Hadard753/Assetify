                        Paragraph with descriptive details about the asset......! :D
                    </p>
                    <br>
                    @*<a href="#" class="mt-auto btn btn-primary  ">Contact Details</a>*@
                    @foreach (var user in Model.Users)
                    {
                        @if (user.Action.ToString() == "PUBLISH")
                            owner = user.User;
                    }
                    @if(owner != null)
                    {
                        <p>Name of contact: @owner.FirstName @owner.LastName</p>
                        <p>Phone Number: @owner.Phone</p>
                    }
                </div>
            </div>
            @if (Model.Images.Count > 0)
            {
                AssetImage[] imagesArr = Model.Images.ToArray();
                if (Model.Images.Count > 1) // if larger than 1 display carousel
                {
                    <!-- Carousel start -->
        <div class="col-md-5">
            <div id="CarouselTest" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < imagesArr.Length; i++)
                    {
                        if (i == 0)
                        {
                            <li data-target="#CarouselTest" data-slide-to="@i" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#CarouselTest" data-slide-to="@i"></li>
                        }
                    }
                </ol>
                <div class="carousel-inner">
                    @for (int i = 0; i < imagesArr.Length; i++)
                    {
                        if (i == 0)
                        {
                            <div class="carousel-item active">
                                <img class="d-block" src="@imagesArr[i].Path" alt="Image not found">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img class="d-block" src="@imagesArr[i].Path" alt="Image not found">
                            </div>
                        }
                    }
                    <a class="carousel-control-prev" href="#CarouselTest" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#CarouselTest" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-4 d-flex justify-content-center">
