                        <img src="~/assets/floors2.png" width="18px" height="18px" title="Number of floors" />  @Model.Floor
                    </p>
                </div>
                <div class="col-4 d-flex justify-content-center">
                    <p class="card card-block border-top-0 border-left-0 border-bottom-0 text-center">
                        <img src="~/assets/rooms2.png" width="18px" height="18px" title="Number of rooms" />  @Model.Rooms
                    </p>
                </div>
                <div class="col-4 d-flex justify-content-center">
                    <p class="card card-block border-top-0 border-left-0 border-bottom-0 text-center">
                        <img src="~/assets/size2.png" width="18px" height="18px" title="Square Meters" />  @Model.Size
                    </p>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-4 d-flex justify-content-center">
                    <p class="card card-block border-top-0 border-left-0 border-bottom-0 text-center">
                        <img src="~/assets/garden.png" width="18px" height="18px" title="Has Garden" />  @(Model.GardenSize == 0 ? "No" : "Yes")
                    </p>
                </div>
                <div class="col-4 d-flex justify-content-center">
                    <p class="card card-block border-top-0 border-left-0 border-bottom-0 text-center">
                        <img src="~/assets/ac.png" width="18px" height="18px" title="Has A/C" />  @(Model.IsAircondition == true ? "Yes" : "No")
                    </p>
                </div>

                <div class="col-4 d-flex justify-content-center">
                    <p class="card card-block border-top-0 border-left-0 border-bottom-0">
                        <img src="~/assets/elevator.svg" width="18px" height="18px" title="Has Elevator" />  @(Model.IsElevator == true ? "Yes" : "No")
                    </p>
                </div>

            </div>
        </div>
                    <!-- End of carousel -->
                    
                }
                else // display 1 image only
                {
                    <div class="col-md-5">
                        <div id="CarouselTest" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#CarouselTest" data-slide-to="0" class="active"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block" src="@imagesArr.First().Path" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
